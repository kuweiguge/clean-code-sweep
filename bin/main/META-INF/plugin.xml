<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.kuweiguge.cleancodesweep</id>
    <name>Clean-Code-Sweep Template</name>
    <vendor>kuweiguge</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <resource-bundle>messages.MenuBundle</resource-bundle>
    <resource-bundle>messages.DocCommentBundle</resource-bundle>
    <resource-bundle>messages.NotifyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup displayType="BALLOON" id="Clean Code Sweep Notification Group"/>
    </extensions>

    <applicationListeners>
    </applicationListeners>
    <actions resource-bundle="messages.MenuBundle">
        <!--弹出菜单-->
        <action id="com.github.kuweiguge.cleancodesweep.actions.CCSMenuAction"
                class="com.github.kuweiguge.cleancodesweep.actions.CCSMenuAction">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C"/>
        </action>
        <!--去掉空白行-->
        <action id="com.github.kuweiguge.cleancodesweep.actions.RemoveBlankLinesAction"
                class="com.github.kuweiguge.cleancodesweep.actions.RemoveBlankLinesAction"
                icon="AllIcons.FileTypes.Any_type">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt R"/>
        </action>
        <!--Mapper接口文件方法参数添加@param注解-->
        <action id="com.github.kuweiguge.cleancodesweep.actions.MapperAddParamAnnotationAction"
                class="com.github.kuweiguge.cleancodesweep.actions.MapperAddParamAnnotationAction"
                icon="AllIcons.Nodes.Annotationtype">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt P"/>
        </action>
        <!--类属性单行注释转JavaDoc注释-->
        <action id="com.github.kuweiguge.cleancodesweep.actions.ToggleLineCommentAction"
                class="com.github.kuweiguge.cleancodesweep.actions.ToggleLineCommentAction"
                icon="AllIcons.Actions.InlayRenameInCommentsActive">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt T"/>
        </action>
        <!--根据文档注释添加一些代码-->
        <action id="com.github.kuweiguge.cleancodesweep.actions.AddCodeByDocCommentAction"
                class="com.github.kuweiguge.cleancodesweep.actions.AddCodeByDocCommentAction"
                icon="AllIcons.Nodes.Annotationtype">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt A"/>
        </action>

        <!--给类加字段-->
        <action id="com.github.kuweiguge.cleancodesweep.actions.AddPropertyAction"
                class="com.github.kuweiguge.cleancodesweep.actions.AddPropertyAction"
                icon="AllIcons.Nodes.Field">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt F"/>
        </action>

        <!--路径参数转表单参数-->
        <action id="com.github.kuweiguge.cleancodesweep.actions.PathToFormAction"
                class="com.github.kuweiguge.cleancodesweep.actions.PathToFormAction"
                icon="AllIcons.Nodes.Parameter">
        </action>
    </actions>
</idea-plugin>